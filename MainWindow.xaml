            Margin="20"
            Background="LightGray"
            Opacity="0.8">
            <Image Source="érme.png" Width="64" Height="64" Margin="5,0,0,0"/>
            <TextBlock x:Name="ErmeSzamlalo" 
               Padding="10px"        
               Text="0" 
               FontSize="64" 
               FontWeight="Bold"
               Foreground="Black"
               Margin="5,0,0,0" Width="100"/>
        </StackPanel>

    </Canvas>
</Window>
