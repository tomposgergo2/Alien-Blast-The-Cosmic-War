<Window x:Class="AlienBlast.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Image Source="kezdő.jpg" Stretch="Fill"/>
        <Button Content="Játék" Width="150" Height="100" FontSize="30"
                Foreground="Cyan" Background="Black" BorderBrush="Cyan" BorderThickness="2"
                FontWeight="Bold" Padding="10"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="KezdesGomb_Click">
            <Button.Effect>
                <DropShadowEffect Color="Cyan" BlurRadius="20" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
