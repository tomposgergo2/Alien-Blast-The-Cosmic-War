<Window x:Class="AlienBlast.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlienBlast"
        mc:Ignorable="d"
        Title="StartWindow" WindowState="Maximized" WindowStyle="none" Height="1080px" Width="1920px">
    <Canvas Name="canvas">
        <Label Content="Alien Blast: The Cosmic War" FontSize="100"/>
        <Button Content="Új játék" Width="300" Height="100" FontSize="40"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="KezdesGomb_Click" Canvas.Top="100"/>
        <Button Content="Folytatás" Width="300" Height="100" FontSize="40" Canvas.Top="200" Click="Folytatas_Click"/>
        <Button Content="Kilépés" Width="300" Height="100" FontSize="40" Canvas.Top="300" Click="Kilepes_Click"/>

        <Image Source="kezdő.jpg" Stretch="Fill"/>
        <Button Content="Játék" Width="150" Height="100" FontSize="30" Foreground="Cyan" Background="Black" BorderBrush="Cyan" BorderThickness="2" FontWeight="Bold" Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Click="KezdesGomb_Click">
            <Button.Effect>
                <DropShadowEffect Color="Cyan" BlurRadius="20" ShadowDepth="0"/>
            </Button.Effect>
        </Button>
        
    </Canvas>
</Window>
